<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/labelBooking"
        android:layout_width="419dp"
        android:layout_height="wrap_content"
        android:background="#aed581"
        android:padding="15dp"
        android:text="@string/labelBooking"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="456dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|fill_vertical">

                <TextView
                    android:id="@+id/lblLocation"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/Location"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_setLocation"
                    android:layout_width="257dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/place_select"
                    android:inputType="textMultiLine"
                    android:singleLine="true" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/texrViewType"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/textViewType"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lblWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/weightAppx"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtWeight"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="@string/hintWeight"
                    android:inputType="number" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/lblDate"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/dateData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/date_select"
                    android:inputType="date" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lblTime"

                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/Time"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/timedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/time_select"
                    android:inputType="time" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lblRemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/txtRemarks"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtxtRemark"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView

                    android:id="@+id/lblPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/addPhoto"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="104dp"
                    android:layout_height="125dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
            </TableRow>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="131dp"
                android:layout_height="34dp"
                android:background="#aed581"
                android:text="@string/submit_book" />


        </TableLayout>
    </ScrollView>




</LinearLayout>